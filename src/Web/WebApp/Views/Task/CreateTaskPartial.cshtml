@model CreateTaskVm

<div class="modal-dialog">
    <form method="post" asp-action="CreateTask">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Создание карточки</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                
                <div class="form-group">
                    <label  asp-for="Title">Название карточки</label>
                    <input required type="text" class="form-control" asp-for="Title" placeholder="Введите название">
                </div>
                <div class="form-group">
                    <label asp-for="Task">Описание карточки</label>
                    <textarea required class="form-control" asp-for="Task" rows="3" placeholder="Введите описание"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="DeadLine">Дата и время</label>
                    <input required type="datetime-local" class="form-control" asp-for="DeadLine">
                    <input hidden asp-for="GroupId">
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="submit" class="btn btn-primary">Создать</button>
            </div>
        </div>
    </form>
</div>
