@model CreateTaskVm

<div class="modal-dialog" >
    <form>
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Создание карточки</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                
                <div class="form-group p-1">
                    <input required type="text" class="form-control " id="taskTitleInput" placeholder="Введите название">
                </div>
                <div class="form-group p-1">
                    <textarea required class="form-control" id="taskDescriptionInput" rows="3" placeholder="Введите описание"></textarea>
                </div>
                <div class="form-group p-1">
                    <label asp-for="DeadLine">Deadline</label>
                    <input required type="datetime-local" class="form-control" id="taskDeadlineInput" value="@Model.DeadLine">
                    <input hidden id="taskGroupIdInput" value="@Model.GroupId" asp-for="GroupId">
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button onclick="createTask()" type="submit" class="btn btn-primary">Создать</button>
            </div>
        </div>
    </form>
</div>
