
@model GroupAggregatorVm

<div class="px-4" id="groupInfo">
    <nav class="navbar bg-body-tertiary">
        <a type="button" class="btn btn-danger"  asp-action="RemoveGroup" asp-route-groupId="@Model.Id">удалить группу</a>
    </nav>
    
    <div class="row">
        <!-- кололнка новых задач -->
        <div class="col-md m-1 rounded bg-dark">

            <p class="text-white">Нужно сделать</p>
            <!-- карточки -->
            @foreach (var task in @Model.Tasks.Where(u => u.State == "New"))
            {
                <div class="col rounded my-1 bg-info-subtle p-1" id="@task.TaskId">
                    <div class="card-body">
                        <button onclick="taskInfoView('@task.TaskId')" type="button" class="btn m-0">
                            <h6 class="card-subtitle mb-4 text-body-secondary">название карточки</h6>
                            <p class="text-success  mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-alarm" viewBox="0 2 18 16">
                                    <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5z"/>
                                    <path d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1h-3zm1.038 3.018a6.093 6.093 0 0 1 .924 0 6 6 0 1 1-.924 0zM0 3.5c0 .753.333 1.429.86 1.887A8.035 8.035 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5zM13.5 1c-.753 0-1.429.333-1.887.86a8.035 8.035 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1z"/>
                                </svg>
                                <span>@task.DeadLine</span>
                            </p>
                        </button>
                        <button onclick="changeTaskState('@task.TaskId', '@task.State', '@task.GroupId')" type="button" class="btn px-0" data-bs-toggle="modal">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                            <span>взять в работу</span>
                        </button>
                    </div>
                </div>
            }

            <!-- создание карточки -->
            <div class="col rounded my-1 bg-info-subtle">
                <button onclick="createTaskView('@Model.Id')" type="button" class="btn">
                    <p class="text-dark">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                        </svg>
                        <span>создать карточку</span>
                    </p>
                </button>
            </div>
        </div>

        <!-- колонка задач на выполнении -->
        <div class="col-md m-1  rounded bg-dark">
            <p class="text-white">В процессе</p>
            <!-- карточки -->
            @foreach (var task in @Model.Tasks.Where(u => u.State == "InWork"))
            {
                <div class="col rounded my-1 bg-info-subtle p-1" id="@task.TaskId">
                    <div class="card-body">
                        <button onclick="taskInfoView('@task.TaskId')" type="button" class="btn m-0">
                            <h6 class="card-subtitle mb-4 text-body-secondary">название карточки</h6>
                            <p class="text-success  mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-alarm" viewBox="0 2 18 16">
                                    <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5z"/>
                                    <path d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1h-3zm1.038 3.018a6.093 6.093 0 0 1 .924 0 6 6 0 1 1-.924 0zM0 3.5c0 .753.333 1.429.86 1.887A8.035 8.035 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5zM13.5 1c-.753 0-1.429.333-1.887.86a8.035 8.035 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1z"/>
                                </svg>
                                <span>@task.DeadLine</span>
                            </p>
                            <p>Автор: Циулин Владимир</p>
                        </button>
                        <button onclick="changeTaskState('@task.TaskId', '@task.State','@task.GroupId')" type="button" class="btn px-0" data-bs-toggle="modal">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                            <span>завершить</span>
                        </button>
                    </div>
                </div>
            }
        </div>

        <!-- колонка завершенных задач -->
        <div class="col-md m-1 rounded bg-secondary">
            <p class="text-white">Готово</p>
            @foreach (var task in @Model.Tasks.Where(u => u.State == "Finished"))
            {
                <div class="col rounded my-1 bg-info-subtle p-1" id="@task.TaskId">
                    <div class="card-body">
                        <button onclick="taskInfoView('@task.TaskId')" type="button" class="btn m-0">
                            <h6 class="card-subtitle mb-4 text-body-secondary">название карточки</h6>
                            <p class="text-success  mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-alarm" viewBox="0 2 18 16">
                                    <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5z"/>
                                    <path d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1h-3zm1.038 3.018a6.093 6.093 0 0 1 .924 0 6 6 0 1 1-.924 0zM0 3.5c0 .753.333 1.429.86 1.887A8.035 8.035 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5zM13.5 1c-.753 0-1.429.333-1.887.86a8.035 8.035 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1z"/>
                                </svg>
                                <span>@task.DeadLine</span>
                            </p>
                            <p>Автор: Циулин Владимир</p>
                        </button>
                    </div>
                </div>
            }

        </div>
    </div>
</div>


