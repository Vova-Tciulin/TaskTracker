@page
@model IdentityServer.Pages.Account.Register.IndexModel

@{
    
}
<div>
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-12 col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header">
                    <h2>Регистрация</h2>
                </div>
                <div class="card-body">
                    <form asp-route="Register">
                        
                        <input type="hidden" asp-for="Input.ReturnUrl"/>
                        <div class="form-group">
                            <label asp-for="Input.Email">Почта</label>
                            <input class="form-control" placeholder="example@gmail.com" asp-for="Input.Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.FirstName">Имя</label>
                            <input class="form-control" asp-for="Input.FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName">Фамилия</label>
                            <input class="form-control"  asp-for="Input.LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.NickName">Ник</label>
                            <input class="form-control"  asp-for="Input.NickName" autofocus>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password">Пароль</label>
                            <input type="password" class="form-control" 
                                   asp-for="Input.Password" autofocus>
                        </div>
                        
                        <button type="submit" class="btn btn-primary" name="button" value="register">Регистрация</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a asp-page="../Login/Index" asp-route-returnUrl="@Model.Input.ReturnUrl">Вход</a>
                </div>
            </div>
        </div>
    </div>

</div>